{
    "manifest_version": 2,
    "name": "Myntra Product Finder",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "https://*.instagram.com/*",  
      "https://*.pinterest.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://*.instagram.com/*", "https://*.pinterest.com/*"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  